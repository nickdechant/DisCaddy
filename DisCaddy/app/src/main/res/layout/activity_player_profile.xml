<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.discaddy.PlayerProfile">

    <TextView
        android:id="@+id/player_name"
        android:text="@string/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10sp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/player_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/player_name"/>

    <TextView
        android:id="@+id/player_fav_course"
        android:text="@string/player_fav_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingRight="10sp"
        android:layout_below="@id/player_name"/>

    <TextView
        android:id="@+id/player_fav_course_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@+id/player_name"
        android:layout_toRightOf="@+id/player_fav_course"/>

    <TextView
        android:id="@+id/player_score"
        android:text="@string/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:layout_below="@id/player_fav_course"/>

    <TextView
        android:id="@+id/player_score_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/player_fav_course"
        android:layout_toRightOf="@+id/player_score"/>

    <TextView
        android:id="@+id/player_fav_disk"
        android:text="@string/player_disk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:layout_below="@id/player_score"/>

    <TextView
        android:id="@+id/player_fav_disk_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@id/player_fav_disk"
        android:layout_below="@id/player_score"/>

    <Button android:id="@+id/submit_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/player_fav_disk_field"
        android:text="@string/profile_edit"
        android:onClick="sendToEdit"/>

    <Button android:id="@+id/submit_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/submit_edit"
        android:text="@string/profile_delete"
        android:onClick="sendToDelete"/>




</RelativeLayout>
